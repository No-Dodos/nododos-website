---
import type { InternalLinkBlockFragment, SiteLocale } from '@lib/types/datocms';
import { getLocale } from '@lib/i18n';
import { getHref } from '@lib/routing';

interface Props {
  block: InternalLinkBlockFragment;
}
const { block, ...props } = Astro.props;
const locale = getLocale() as SiteLocale;
---

<a 
  href={ getHref({ locale, record: block.page }) } 
  class:list={ [`action--${block.style || 'default'}`] } 
  { ...props }
>{ block.title || block.page?.title }</a>
