---
interface Props {
  title?: string | null;
}

const { title, ...props } = Astro.props;
---

<figure {...props}>
  <slot />
  {title && <figcaption>{title}</figcaption>}
</figure>

<style>
  /* basic styling, can be removed */
  figcaption {
    margin-top: 15px;
    text-align: center;
  }
</style>
