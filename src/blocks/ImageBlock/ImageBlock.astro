---
import type { ImageBlockFragment } from '@lib/types/datocms';
import Figure from './Figure.astro';
import Image from './Image.astro';

interface Props {
  block: ImageBlockFragment
}

const { block } = Astro.props;
---

<Figure title={ block.image.title } class:list={['figure']}>
  <Image image={ block.image } class:list={[`image--${block.style}`]} />
</Figure>

<style>
  .figure {
    margin-block: 10px;
  }
  .image--rounded {
    border-radius: 10px;
  }
</style>
